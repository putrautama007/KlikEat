<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_commentName_foodDetail"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="John Thor"/>

            <RatingBar
                android:id="@+id/rb_comment_foodDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                style="?android:attr/ratingBarStyleSmall"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_comment_foodDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Makanan nya enak"/>

        <TextView
            android:id="@+id/tv_date_foodDetail"
            android:text="20-10-2018 | 18.00"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/linear_penilaianSaya"
            android:background="#000"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>