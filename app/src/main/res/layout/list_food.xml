<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <android.support.v7.widget.CardView
        android:id="@+id/cv_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:padding="20dp"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_produk"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:background="@drawable/round_background"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_foodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Macaron Mix isi 5"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_penjual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#79000000"
                    android:layout_marginStart="16dp"
                    android:text="Macaron Tutik"/>

                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#ff7600"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="16dp"
                    android:text="Rp.20.000"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:id="@+id/rating_makanan"
                        style="@style/customRatingBar"
                        android:progressTint="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3" />

                    <TextView
                        android:id="@+id/tv_jumlah_ulasan"
                        android:text="(22)"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>